<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_marginBottom="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
        android:id="@+id/header_cover_image"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="centerCrop" />

    <android.support.v7.widget.CardView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/view2"
        app:cardCornerRadius="10dp"
        android:layout_below="@+id/header_cover_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-50dp"
        android:scaleType="centerCrop"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9">
        <ImageView
            android:layout_height="80dp"
            android:layout_width="80dp"
            android:id="@+id/user_profile_photo"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true">
        </ImageView>
    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:id="@+id/profile_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_cover_image"
        android:elevation="4dp"
        android:paddingBottom="24dp">




        <LinearLayout
            android:id="@+id/llname"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/user_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text=""
                android:textSize="24dp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/verified"
                android:visibility="gone"
                android:background="@drawable/verified"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_width="20dp"
                android:layout_height="20dp" />

        </LinearLayout>

        <TextView
            android:id="@+id/user_profile_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llname"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textSize="14dp" />


        <LinearLayout
            android:id="@+id/lllocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/user_profile_tag"
            android:layout_centerHorizontal="true">


            <ImageView
                android:background="@drawable/location"
                android:id="@+id/location_pic"
                android:layout_width="20dp"
                android:layout_height="20dp" />

            <TextView
                android:id="@+id/location"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text=""/>



        </LinearLayout>

        <LinearLayout
            android:id="@+id/above"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lllocation"
            android:layout_marginTop="5dp"
            android:layout_centerHorizontal="true">

            <TextView
                android:id="@+id/freinds"
                android:layout_width="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_height="20dp"
                android:text=""/>

            <TextView
                android:id="@+id/followers"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text=""/>



        </LinearLayout>

        <TextView
            android:id="@+id/description"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/above"/>


    </RelativeLayout>


    </RelativeLayout>




</LinearLayout>